<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" style="-fx-background-color: #f4f7f6;" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.TeamController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Team Management" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <VBox spacing="10" prefWidth="300" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;">
            <Label text="Add New Team" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
            <Separator/>
            <Label text="Team Name"/>
            <TextField fx:id="teamNameField" promptText="e.g. Technical Support"/>
            <Label text="Department"/>
            <TextField fx:id="departmentField" promptText="e.g. Customer Success"/>
            <Label text="Team Lead"/>
            <ComboBox fx:id="leadSelector" maxWidth="Infinity" promptText="Select Agent"/>
            <Region VBox.vgrow="ALWAYS"/>
            <Button text="Create Team" onAction="#handleAddTeam" maxWidth="Infinity" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
        </VBox>

        <VBox spacing="10" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;">
            <HBox alignment="CENTER_LEFT">
                <Label text="Existing Teams" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Delete Selected" onAction="#handleDeleteTeam" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
            </HBox>
            <TableView fx:id="teamTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colTeamId" text="ID" prefWidth="100"/>
                    <TableColumn fx:id="colTeamName" text="Name" prefWidth="200"/>
                    <TableColumn fx:id="colDepartment" text="Department" prefWidth="150"/>
                    <TableColumn fx:id="colLead" text="Lead ID" prefWidth="150"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </HBox>
</VBox>
