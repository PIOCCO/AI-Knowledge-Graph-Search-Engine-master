<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.controller.TicketFormController"
            style="-fx-background-color: #f6f8fa; -fx-background: #f6f8fa;">

    <content>
        <VBox alignment="TOP_CENTER" style="-fx-padding: 30; -fx-background-color: #f6f8fa;">
            <VBox maxWidth="800" spacing="25" styleClass="form-container">

                <!-- Header -->
                <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-border-color: transparent transparent #e1e4e8 transparent; -fx-border-width: 0 0 1 0; -fx-padding: 0 0 20 0;">
                    <Label text="ðŸŽ«" style="-fx-font-size: 32px;"/>
                    <VBox spacing="2">
                        <Label text="Create New Ticket" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #24292e;"/>
                        <Label text="Please provide the details of your request below." style="-fx-text-fill: #57606a; -fx-font-size: 14px;"/>
                    </VBox>
                </HBox>

                <!-- Form Fields -->
                <VBox spacing="20">
                    <!-- Title -->
                    <VBox spacing="8">
                        <Label text="Ticket Title" styleClass="form-label"/>
                        <TextField fx:id="txtTitle" promptText="Brief summary of the issue"
                                   styleClass="form-field"/>
                    </VBox>

                    <!-- Description & AI -->
                    <VBox spacing="8">
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label text="Description" styleClass="form-label"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Button fx:id="btnAnalyzeAI" text="âœ¨ Refine with AI"
                                    onAction="#handleAnalyzeAI"
                                    styleClass="ai-button"/>
                            <ProgressIndicator fx:id="aiProgress" prefWidth="18" prefHeight="18" visible="false"/>
                        </HBox>

                        <TextArea fx:id="txtDescription" promptText="Please describe the issue in detail..."
                                  prefRowCount="8" wrapText="true"
                                  styleClass="form-area"/>

                        <Label fx:id="lblAIResult" visible="false" styleClass="ai-result-box"/>
                    </VBox>

                    <!-- Priority & Category Row -->
                    <HBox spacing="20">
                        <VBox spacing="8" HBox.hgrow="ALWAYS">
                            <Label text="Priority" styleClass="form-label"/>
                            <ComboBox fx:id="comboPriority" maxWidth="Infinity"
                                      styleClass="form-field"/>
                        </VBox>

                        <VBox spacing="8" HBox.hgrow="ALWAYS">
                            <Label text="Category" styleClass="form-label"/>
                            <ComboBox fx:id="comboCategory" maxWidth="Infinity"
                                      styleClass="form-field"/>
                        </VBox>
                    </HBox>

                    <!-- Assigned To -->
                    <VBox spacing="8">
                        <Label text="Assign To" styleClass="form-label"/>
                        <ComboBox fx:id="comboAssignTo" maxWidth="Infinity"
                                  styleClass="form-field"/>
                    </VBox>
                </VBox>

                <!-- Footer / Buttons -->
                <HBox spacing="12" alignment="CENTER_RIGHT" style="-fx-padding: 20 0 0 0; -fx-border-color: #e1e4e8 transparent transparent transparent; -fx-border-width: 1 0 0 0;">
                    <Button fx:id="btnCancel" text="Cancel" onAction="#handleCancel"
                            styleClass="action-button-secondary" prefWidth="100"/>
                    <Button fx:id="btnSave" text="Create Ticket" onAction="#handleSave"
                            styleClass="action-button-primary" prefWidth="140"/>
                </HBox>

            </VBox>
        </VBox>
    </content>
</ScrollPane>