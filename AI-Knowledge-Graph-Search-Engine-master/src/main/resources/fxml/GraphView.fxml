<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.web.WebView?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" style="-fx-background-color: #1e272e;" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="15" alignment="CENTER_LEFT">
        <Label text="Knowledge Graph Visualization" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: white;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #2f3640; -fx-padding: 8; -fx-background-radius: 5;">
            <Label text="Mode:" style="-fx-text-fill: #dcdde1;"/>
            <ToggleButton text="Tickets" selected="true" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            <ToggleButton text="Agents" style="-fx-background-color: #485460; -fx-text-fill: white;"/>
            <ToggleButton text="Articles" style="-fx-background-color: #485460; -fx-text-fill: white;"/>
        </HBox>
        <Button text="Reset View" style="-fx-background-color: #e67e22; -fx-text-fill: white;"/>
    </HBox>

    <StackPane VBox.vgrow="ALWAYS" style="-fx-background-color: #2f3640; -fx-background-radius: 10;">
        <VBox alignment="CENTER" spacing="15">
            <Label text="Interactive Graph Loading..." style="-fx-text-fill: #7f8c8d; -fx-font-size: 18;"/>
            <ProgressIndicator prefWidth="50" prefHeight="50"/>
        </VBox>
        <!-- In a real app, this would be a custom canvas or a WebView with a d3.js graph -->
        <Pane style="-fx-background-color: transparent;"/>
    </StackPane>

    <HBox spacing="15" style="-fx-background-color: #2f3640; -fx-padding: 10; -fx-background-radius: 5;">
        <Label text="Legend:" style="-fx-text-fill: #dcdde1; -fx-font-weight: bold;"/>
        <Label text="● Ticket" style="-fx-text-fill: #3498db;"/>
        <Label text="● User" style="-fx-text-fill: #2ecc71;"/>
        <Label text="● Category" style="-fx-text-fill: #e74c3c;"/>
        <Label text="● SLA" style="-fx-text-fill: #f1c40f;"/>
    </HBox>
</VBox>
