<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" style="-fx-background-color: #f4f7f6;" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.WorkflowController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Workflow Automation" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <VBox spacing="10" prefWidth="350" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;">
            <Label text="Create Automation Rule" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
            <Separator/>
            <Label text="Rule Name"/>
            <TextField fx:id="nameField" promptText="e.g. Notify on High Priority"/>
            <Label text="Trigger Event"/>
            <ComboBox fx:id="triggerCombo" maxWidth="Infinity" promptText="Select Trigger"/>
            <Label text="Rule Definition (JSON)"/>
            <TextArea fx:id="ruleDescription" prefHeight="200" promptText="{ 'action': 'NOTIFY', 'params': { ... } }"/>
            <Region VBox.vgrow="ALWAYS"/>
            <Button text="Activate Rule" onAction="#handleCreateWorkflow" maxWidth="Infinity" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
        </VBox>

        <VBox spacing="10" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;">
            <HBox alignment="CENTER_LEFT">
                <Label text="Active Workflows" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Toggle Selected" onAction="#handleToggleActive"/>
            </HBox>
            <TableView fx:id="workflowTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colName" text="Workflow Name" prefWidth="250"/>
                    <TableColumn fx:id="colTrigger" text="Trigger Event" prefWidth="150"/>
                    <TableColumn fx:id="colActive" text="Status" prefWidth="100"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </HBox>
</VBox>
