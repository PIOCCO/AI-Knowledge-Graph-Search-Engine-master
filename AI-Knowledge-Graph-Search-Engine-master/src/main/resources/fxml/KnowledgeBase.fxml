<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" style="-fx-background-color: #f4f7f6;" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.KnowledgeBaseController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="15" alignment="CENTER_LEFT">
        <Label text="Knowledge Base" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <TextField fx:id="searchField" prefWidth="300" promptText="Semantic search articles..." onAction="#handleSearch"/>
        <Button text="ðŸ”" onAction="#handleSearch"/>
        <Button text="New Article" onAction="#handleNewArticle" style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
    </HBox>

    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <VBox spacing="10" prefWidth="350" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;">
            <Label text="Articles" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
            <TableView fx:id="articleTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colTitle" text="Title" prefWidth="200"/>
                    <TableColumn fx:id="colCategory" text="Category" prefWidth="100"/>
                    <TableColumn fx:id="colViews" text="Views" prefWidth="80"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>

        <VBox spacing="15" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
            <Label fx:id="articleTitleLabel" text="Select an article to view" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
            <Separator/>
            <TextArea fx:id="articleContentArea" VBox.vgrow="ALWAYS" editable="false" wrapText="true" style="-fx-font-size: 14; -fx-background-color: transparent; -fx-border-color: transparent;"/>
        </VBox>
    </HBox>
</VBox>
