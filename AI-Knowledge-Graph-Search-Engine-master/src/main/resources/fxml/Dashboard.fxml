<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.chart.*?>
<?import javafx.geometry.Insets?>

<ScrollView fitToWidth="true" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.DashboardController">
    <VBox spacing="20" style="-fx-background-color: #f4f7f6;">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <HBox spacing="20" alignment="CENTER">
            <VBox styleClass="metric-card" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" HBox.hgrow="ALWAYS">
                <Label text="Total Tickets" style="-fx-font-size: 14; -fx-text-fill: #7f8c8d;"/>
                <Label fx:id="totalTicketsLabel" text="0" style="-fx-font-size: 28; -fx-font-weight: bold;"/>
            </VBox>
            <VBox styleClass="metric-card" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" HBox.hgrow="ALWAYS">
                <Label text="Open Tickets" style="-fx-font-size: 14; -fx-text-fill: #e67e22;"/>
                <Label fx:id="openTicketsLabel" text="0" style="-fx-font-size: 28; -fx-font-weight: bold;"/>
            </VBox>
            <VBox styleClass="metric-card" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" HBox.hgrow="ALWAYS">
                <Label text="Resolved" style="-fx-font-size: 14; -fx-text-fill: #27ae60;"/>
                <Label fx:id="resolvedTicketsLabel" text="0" style="-fx-font-size: 28; -fx-font-weight: bold;"/>
            </VBox>
            <VBox styleClass="metric-card" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" HBox.hgrow="ALWAYS">
                <Label text="SLA Compliance" style="-fx-font-size: 14; -fx-text-fill: #3498db;"/>
                <Label fx:id="slaComplianceLabel" text="0%" style="-fx-font-size: 28; -fx-font-weight: bold;"/>
            </VBox>
        </HBox>

        <GridPane hgap="20" vgap="20">
            <columnConstraints>
                <ColumnConstraints percentWidth="40"/>
                <ColumnConstraints percentWidth="60"/>
            </columnConstraints>
            
            <VBox GridPane.columnIndex="0" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;">
                <Label text="Ticket Status Distribution" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                <PieChart fx:id="statusPieChart" prefHeight="300"/>
            </VBox>
            
            <VBox GridPane.columnIndex="1" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;">
                <Label text="Tickets by Priority" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                <BarChart fx:id="priorityBarChart" prefHeight="300">
                    <xAxis><CategoryAxis side="BOTTOM"/></xAxis>
                    <yAxis><NumberAxis side="LEFT"/></yAxis>
                </BarChart>
            </VBox>
            
            <VBox GridPane.columnSpan="2" GridPane.rowIndex="1" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;">
                <Label text="Ticket Volume Trend" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                <LineChart fx:id="trendLineChart" prefHeight="300">
                    <xAxis><CategoryAxis side="BOTTOM"/></xAxis>
                    <yAxis><NumberAxis side="LEFT"/></yAxis>
                </LineChart>
            </VBox>
        </GridPane>
        
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Refresh Dashboard" onAction="#handleRefresh" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            <Button text="Export Report" onAction="#handleExport" style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
        </HBox>
    </VBox>
</ScrollView>
